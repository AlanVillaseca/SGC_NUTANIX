        width: 100%;
        height: 500px;
        overflow: auto;
    }

    .uldrop {
        width: 100%;
        height: 470px;
    }

    .uldrag {
        width: 100%;
        height: 500px;
    }

    .glyp-close {
        cursor: pointer;
    }

    .msgArrastreAqui {
        position: absolute;
        left: 50%;
        top: 50%;
        color: darkgray;
    }

    .glyp-amarillo {
        color: #EDCF57;
    }
</style>

<script>
    /* Modal Confirm INI*/
    function confirm(heading, question, cancelButtonTxt, okButtonTxt, callback) {

        var confirmModal =
          $('<div class="modal fade">' +
              '<div class="modal-dialog">' +
              '<div class="modal-content">' +
              '<div class="modal-header">' +
                '<h4 class="modal-title">' + heading +'</h4>' +
              '</div>' +

              '<div class="modal-body">' +
                '<p>' + question + '</p>' +
              '</div>' +

              '<div class="modal-footer">' +
                '<a href="#!" class="btn" data-dismiss="modal">' +
                  cancelButtonTxt +
                '</a>' +
                '<a href="#!" id="okButton" class="btn btn-primary">' +
                  okButtonTxt +
                '</a>' +
              '</div>' +
              '</div>' +
              '</div>' +
            '</div>');

        confirmModal.find('#okButton').click(function(event) {
            callback();
            confirmModal.modal('hide');
        });

        confirmModal.modal('show');
    };
    /*Modal Confirm END*/
    /* Modal alert INI*/
    function c_alert(heading, text, cancelButtonTxt) {

        var confirmModal =
          $('<div class="modal fade">' +
              '<div class="modal-dialog">' +
              '<div class="modal-content">' +
              '<div class="modal-header">' +
                  '<h3 class="modal-title">' + heading +'</h3>' +
              '</div>' +

              '<div class="modal-body">' +
                '<p>' + text + '</p>' +
              '</div>' +

              '<div class="modal-footer">' +
                '<a href="#!" class="btn" data-dismiss="modal">' +
                  cancelButtonTxt +
                '</a>' +
              '</div>' +
              '</div>' +
              '</div>' +
            '</div>');

        /*confirmModal.find('#okButton').click(function(event) {
            callback();
            confirmModal.modal('hide');
        });*/

        confirmModal.modal('show');
    };
    /*Modal alert END*/

    
    /*Contains Insensitive*/
    $.extend($.expr[":"], {
        "containsNC": function(elem, i, match, array) {
            return (elem.textContent || elem.innerText || "").toLowerCase().indexOf((match[3] || "").toLowerCase()) >= 0;
        }
    });


    var tabCount = 2;

    $(document).ready(function () {

        @{JavaScriptSerializer jss = new JavaScriptSerializer();}
        var hojasxPadre = @Html.Raw(jss.Serialize(@Model.hojasxPadre));
        var parametrosCostoJson = @Html.Raw(jss.Serialize(@Model.parametrosCostoJson));
        var variablesJson = @Html.Raw(jss.Serialize(@Model.VariablesJson));
        var ImplementacionesJson = @Html.Raw(jss.Serialize(@Model.implementacionesJson));
        var familiasJson = @Html.Raw(jss.Serialize(@Model.familiasJson));
        var plantillasPorId = @Html.Raw(jss.Serialize(@Model.plantillaPorId));
        var plantillasCostosPorId = @Html.Raw(jss.Serialize(@Model.plantillaCostosPorId));
        var plantillaVariablesPorId = @Html.Raw(jss.Serialize(@Model.plantillaVariablesPorId));
        var plantillaImplementPorId = @Html.Raw(jss.Serialize(@Model.plantillaImplementPorId));
        var enEdicion = 0;

        //alert(JSON.stringify(plantillaVariablesPorId));

        var hojasxPadreVacio = hojasxPadre;
        /************************************************************************/
        /*                         CARGAMOS COMBO FAMILIA                       */
        /************************************************************************/

        _.each(familiasJson, function(i){
            if($('#cmbFamilia option[value='+i.idFamilia+']').length == 0){
                if($.trim(_.pluck(plantillasPorId, 'idFamilia')) ==  i.idFamilia){

                    $('#cmbFamilia').append('<option value="' + i.idFamilia + '" selected="selected">' + i.Familia + '</option>');

                }else{

                    $('#cmbFamilia').append('<option value="' + i.idFamilia + '">'+i.Familia+'</option>');
                }

            }
        });

        $('#cmbFamilia').selectmenu('refresh');

        /************************************************************************/
        /*                      CARGAMOS COMBO SUB-FAMILIA                      */
        /************************************************************************/

        _.each(_.where(familiasJson, {idFamilia : $.trim(_.pluck(plantillasPorId, 'idFamilia'))}), function(i){
            if($.trim(_.pluck(plantillasPorId, 'Subfamilia')) ==  i.idSubFamilia){

                $('#cmbSubfamilia').append('<option value="'+ i.idSubFamilia +'" selected="selected">' + i.Subfamilia + '</option>');

            }else{

                $('#cmbSubfamilia').append('<option value="' + i.idSubFamilia + '">' + i.Subfamilia + '</option>');

            }

        });

        $('#cmbSubfamilia').selectmenu('refresh');


        /************************************************************************/
        /*                      CARGAMOS Nombre PLANTILLA                       */
        /************************************************************************/

        $('#txtNomPlantilla').val($.trim(_.pluck(plantillasPorId, 'Nombre')));

        /************************************************************************/
        /*                       CHECK SOFTWARE ADICIONAL                       */
        /************************************************************************/

        if($.trim(_.pluck(plantillasPorId, 'SoftAdicional')) == 'True'){
            $('#softAdicional').prop('checked', true);
            $('#softAdicional').prop('disabled', true);

        }else{

            $('#softAdicional').prop('checked', false);
            $('#softAdicional').prop('disabled', true);
        }


        /************************************************************************/
        /*                    INICIALIZA SELECTMENU JQUERY UI                   */
        /************************************************************************/

        $('#cmbFamilia').selectmenu({
            select: function (event, ui) {
                var idFamilia = $(this).val();

                $('#cmbSubfamilia').html('');

                _.each(_.where(familiasJson, {idFamilia : idFamilia}), function(i){
                    if($.trim(_.pluck(plantillasPorId, 'Subfamilia')) ==  i.Subfamilia){

                        $('#cmbSubfamilia').append('<option value="'+ i.idSubFamilia +'" selected="selected">'+i.Subfamilia+'</option>');

                    }else{

                        $('#cmbSubfamilia').append('<option value="'+ i.idSubFamilia +'">'+i.Subfamilia+'</option>');

                    }

                });
                $('#cmbSubfamilia').selectmenu('refresh');
            }
        });

        /************************************************************************/
        /*                           CREAMOS LOS TABS                           */
        /************************************************************************/
        var contadoTabs = _.uniq(_.pluck(plantillaVariablesPorId, 'Tabs')).length;
        var totalTabs = contadoTabs;
        _.each(_.uniq(_.pluck(plantillaVariablesPorId, 'Tabs')),  function(i) {
            $('a[href*=#nuevotabCostos]').parent().after('<li role="presentation"><a href="#' + i + '"><input type="hidden" class="cambia-nombre" value="' + $.trim(i) + '" /><span ordenTab="'+ contadoTabs +'" class="nombre-tab cambia-tab">' + $.trim(i) + '&nbsp;&nbsp;</span><span class="glyphicon glyphicon-remove glyp-close"></span></a></li>');
            $('#tabContent').append('<div id="' + i + '" class="tab-pane tabdrop">\
	                                    <label id="msgaa" class="msgArrastreAqui">Arrastre Aquí (variables)</label>\
	                                    <ul id="" class="connected-sortable uldrop sortableN"></ul>\
                                    </div>');
            contadoTabs = contadoTabs - 1;
        });

        /************************************************************************/
        /*                     INICIALIZA CONNECTED SORTABLE                    */
        /************************************************************************/

        //Quito los costos que estaban guardados de la lista general de costos (ul derecha)
        _.each(plantillasCostosPorId, function(j){
            parametrosCostoJson = _.reject(parametrosCostoJson, {id: j.Idparametrocosto});
            $('#sortableCosto').append('<li class="ui-state-default clsCosto" id=' + j.Idparametrocosto + '>' + j.Nombre + '</li>');
            $('#msgaacos').remove();
        });

        _.each(plantillaImplementPorId, function(j){
            ImplementacionesJson = _.reject(ImplementacionesJson, {id: j.idCatalogoElemento});
            $('#sortableImp').append('<li class="ui-state-default clsImp" id=i' + j.idCatalogoElemento + ' predefinido="'+ j.Predefinido +'" editable="'+ j.Editable +'" requerido="'+ j.Requerido +'">' + j.Nombreatributo + '</li>');
            $('#msgaaimp').remove();
        });

        _.each(parametrosCostoJson, function(i){
            $('#sortable1').append('<li class="ui-state-default clsCosto" id=' + i.id + '>' + i.nombre + '</li>');
        });

        //Quito las variables que estaban guardados de la lista general de variables (ul derecha)
        _.each(_.sortBy(plantillaVariablesPorId, function(num){ return parseInt(num.Orden)}), function(j){
            variablesJson = _.reject(variablesJson, {id: j.idCatalogoElemento});
            $('#' + j.Tabs + ' .sortableN').append('<li class="ui-state-default clsVariable" id=v' + j.idCatalogoElemento + ' predefinido="'+ j.Predefinido +'" editable="'+ j.Editable +'" requerido="'+ j.Requerido +'">' + j.Nombreatributo + '</li>');
            //$('#sortableN').append('<li class="ui-state-default clsVariable" id=v' + j.idCatalogoElemento + '>' + j.Nombreatributo + '</li>');
            $('#msgaa').remove();
        });

        _.each(variablesJson, function(i){
            $('#sortable2').append('<li class="ui-state-default clsVariable" id=v' + i.id + '>' + i.nombre + '</li>');
        });

        _.each(ImplementacionesJson, function(i){
            $('#sortable3').append('<li class="ui-state-default clsImp" id=i' + i.id + '>' +i.nombre + '</li>');
        });

        // Connecta tab con sus respectivos origen-destino
        $(".connected-sortable-imp").sortable({
            connectWith: ".connected-sortable-imp"
        });

        $(".connected-sortable-cos").sortable({
            connectWith: ".connected-sortable-cos"
        });

        $(".connected-sortable").sortable({
            connectWith: ".connected-sortable"
        });

        /************************************************************************/
        /*              HACEMOS QUE EL CONTENIDO NO SEA EDITABLE                */
        /************************************************************************/

        // Inhabilito los select de familia
        $('#cmbFamilia').selectmenu('disable');
        $('#cmbSubfamilia').selectmenu('disable');

        // Remuevo las clases connected para no hacer drop salvo cuando se edite
        $('.container-fluid').find('ul').each(function(){
            $(this).removeClass('connected-sortable-imp');
            $(this).removeClass('connected-sortable-cos');
            $(this).removeClass('connected-sortable');
        });

        // Remuevo clase cambia-tab para evitar que se edite el nombre de tabs de variables
        $('.container-fluid').find('span.nombre-tab').each(function(){
            $(this).removeClass('cambia-tab');
        });

        // Ocultamos botones eliminar tab
        $('.container-fluid').find('span.glyp-close').each(function(){
            $(this).hide();
        });

        // Oculto crea-tab para evitar que se creen nuevos tabs cuando no está habilitado para edición
        $('.crea-tab').hide();


        $('#txtNomPlantilla').prop('disabled', true);

        $('#cancelPlantilla').parent().hide();
        $('#grdaPlantilla').parent().hide();

        /************************************************************************/
        /*               HABILITAMOS EL CONTENIDO PARA EDICION                  */
        /************************************************************************/

        $(document).on('click','#editPlantilla', function() {
            enEdicion = 1;

            $('#cmbFamilia').selectmenu('enable');
            $('#cmbSubfamilia').selectmenu('enable');

            $('.container-fluid').find('span.glyp-close').each(function(){
                $(this).show();
            });

            $('#sortable1').addClass('connected-sortable-cos');
            $('#sortable2').addClass('connected-sortable');
            $('#sortable3').addClass('connected-sortable-imp');
            $('#sortableImp').addClass('connected-sortable-imp');
            $('#sortableCosto').addClass('connected-sortable-cos');
            $('.sortableN').addClass('connected-sortable');

            $('.container-fluid').find('span.nombre-tab').each(function(){
                $(this).addClass('cambia-tab');
            });

            $('#softAdicional').prop('disabled', false);
            $('.crea-tab').show();

            $('#txtNomPlantilla').prop('disabled', false);

            $('#editPlantilla').parent().hide();
            $('#cancelPlantilla').parent().show();
            $('#grdaPlantilla').parent().show();

        });

        /************************************************************************/
        /*             CAMBIA NOMBRE DE LOS TABS DE VARIABLES                   */
        /************************************************************************/

        $(document).on('dblclick','.cambia-tab', function (e) {

            $(this).parent().children('input').prop('type', 'text');
            $(this).parent().children('input').val($(this).text()).select();
            $(this).toggle();
        });

        $(document).on('keypress', 'input.cambia-nombre',function(e){
            var p = e.which;
            if(p==13){
                $(this).blur();
            }
        });

        $(document).on('blur', 'input.cambia-nombre',function(e){
            $(this).parent().children('input').prop('type', 'hidden');
            $(this).parent().children('span.cambia-tab').text($(this).parent().children('input').val() + ' ');
            $(this).parent().children('span.cambia-tab').toggle();
        });


        var $varContext = null;
        
        $(document).on('dblclick', '.clsVariable, .clsImp', function (e) {
            /*
            if ($('#grdaPlantilla').length == 0){
                return;
            }
            */
            $('#compVariables #divControl').empty();
            $('#compVariables #divControl').append('<label class="control-label">Valor Predefinido</label>');
            $('#compVariables #pNomVariable').text($(this).text());

            $varContext = $(this);

            $.ajax({
                dataType: "json",
                url: '@Url.Action("jsonVariable")',
                data: {id : $(this).attr('id').substr(1)}
            }).done(function(varJson){
                //alert(JSON.stringify(varJson));
                //alert(JSON.stringify(plantillaVariablesPorId));
                
                if (varJson.length == 1){
                    _.each(varJson, function(j){
                        if (j.Idtipodato == 1){
                            if(_.where(plantillaVariablesPorId,{idCatalogoElemento : j.idCatalogoElemento}).length > 0 ){

                                $('#compVariables #divControl').append('<input id="varControl" class="form-control input-sm" type="text" \
                                    placeholder="' + _.pluck(_.where(plantillaVariablesPorId,{idCatalogoElemento : j.idCatalogoElemento}), 'Predefinido')  + '" />');
                            }else{

                                $('#compVariables #divControl').append('<input id="varControl" class="form-control input-sm" type="text" />');
                            }
                        }
                        if (j.Idtipodato == 2){
                            if(_.where(plantillaVariablesPorId,{idCatalogoElemento : j.idCatalogoElemento}).length > 0 ){

                                $('#compVariables #divControl').append('<input id="varControl" type="text" class="es-numerico form-control input-sm" placeholder="'+ _.pluck(_.where(plantillaVariablesPorId,{idCatalogoElemento : j.idCatalogoElemento}), 'Predefinido') +'" />');

                            }else{

                                $('#compVariables #divControl').append('<input id="varControl" type="text" class="es-numerico form-control input-sm" />');
                            }
                        }
                        if (j.Idtipodato == 4){
                            if(_.where(plantillaVariablesPorId,{idCatalogoElemento : j.idCatalogoElemento}).length > 0 ){
                                $('#compVariables #divControl').append('<input id="varControl" type="checkbox" checked/>');

                            }else{

                                $('#compVariables #divControl').append('<input id="varControl" type="checkbox" />');
                            }
                        }
                    });
                }
                else{
                    //if (i.Idtipodato == 3){
                    $('#compVariables #divControl').append('<select class="form-control input-sm" id="varControl"></select>');
                    $('#compVariables #divControl select').append('<option value=""> - </option>');
                    _.each(varJson, function(i){
                        $('#compVariables #divControl select').append('<option value="'+ i.Idlistavalores +'">'+ i.Valor +'</option>');
                    });
                    //}
                    //$('#varControl').selectmenu();
                    $('#varControl').val($varContext.attr('predefinido'));
                    //$('#varControl').selectmenu('refresh');
                }
                
                $('#varControl').val($varContext.attr('predefinido'));

                if ($varContext.attr('editable') == 'True'){
                    $('#chkEditable').prop('checked', true);
                }
                else{
                    $('#chkEditable').prop('checked', false);
                }

                if ($varContext.attr('requerido') == 'True'){
                    $('#chkObligatorio').prop('checked', true);
                }
                else{
                    $('#chkObligatorio').prop('checked', false);
                }


                $('#modCustom')
                              .prop('class', 'modal fade')
                              .addClass('right')
                              .modal({
                                  backdrop: 'static',
                                  keyboard: false
                              });
                $('#modCustom').modal('show');
                $(':input, a').attr('tabindex', '-1');

            });

        });
        
        $(document).on('click','.marca-obligatorio', function() {
            $(".obligatorio").prop("checked", true);
        });

        $(document).on('click','.marca-opcional', function() {
            $(".opcional").prop("checked", true);
        });

        $(document).on('click','.marca-noaplica', function() {
            $(".noAplica").prop("checked", true);
        });

        $('#guardar').click(function(){

            var vEdit = 'False';
            var vObliga = 'False';
            var vPred = $('#varControl').val();

            if ($('select#varControl').length > 0){
                if ($('select#varControl').val().length > 0){
                    vEdit = 'False';
                }
                else{                   
                    vEdit = 'True';   
                }
            }
            else{
            if ($('#chkEditable').prop( "checked" )){
                    vEdit = 'True';
                }
            }

            if ($('#chkObligatorio').prop( "checked" )){
                vObliga = 'True';
            }

            $varContext.attr('predefinido',vPred);
            $varContext.attr('Editable',vEdit);
            $varContext.attr('requerido',vObliga);
            $('#modCustom').modal('toggle');
        });

        // Guardar
        $('#grdaPlantilla').click(function(){

            $('#grdaPlantilla').prop('disabled',true);
            if($('#lst_pltilla').validar()){
                $('#grdaPlantilla').prop('disabled',false);
                return;
            }
            //alert($.trim(_.pluck(plantillasPorId, 'Idplantilla')));
            var heading = 'Guardar Plantilla';
            var question = '¿Desea guardar la plantilla?';
            var cancelButtonTxt = 'Cancelar';
            var okButtonTxt = 'Aceptar';

            var callback = function() {
                var filtrado = '';
                hojasxPadre = JSON.parse(JSON.stringify(hojasxPadreVacio));    
                //alert(JSON.stringify(hojasxPadre));
                $('.nombre-tab' ).each(function( index ) {
                    var tabs = $(this).text();
                    var attrOrdenTab = $(this).attr('ordenTab');
                    var orden = 1;
                    $($(this).parent().attr("href")).children('ul').children('li').each(function (){
                        var idPadre = $(this).attr('id');

                        var attrPred = $(this).attr('predefinido');
                        var attrEdit = $(this).attr('editable');
                        var attrObliga = $(this).attr('requerido');

                        for (var i=0; i<hojasxPadre.length; i++) {
                            if (hojasxPadre[i].id_padre == idPadre) {
                                hojasxPadre[i].tabs = tabs;
                                hojasxPadre[i].nombrePlantilla = $('#txtNomPlantilla').val();

                                hojasxPadre[i].Predefinido = attrPred;
                                hojasxPadre[i].Editable = attrEdit;
                                hojasxPadre[i].Requerido = attrObliga;
                                hojasxPadre[i].OrdenTab = attrOrdenTab;
                                hojasxPadre[i].Orden = orden;
                                orden = orden + 1;
                                //break;
                            }

                            if($('#softAdicional').prop('checked')) {
                                hojasxPadre[i].softAdicional = 1;
                            } else {
                                hojasxPadre[i].softAdicional = 0;
                            }

                            hojasxPadre[i].Idplantilla = $.trim(_.pluck(plantillasPorId, 'Idplantilla'));

                            hojasxPadre[i].Subfamilia = $('#cmbSubfamilia').val();
                        }

                        filtrado = _.reject(hojasxPadre, {tabs: ""});

                    });
                });

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("jsonReceiverPlantillaEdit")',
                    data: JSON.stringify(filtrado),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json"
                }).always(function(r){

                    var respJson = JSON.parse(JSON.stringify(r));
                    if (respJson.length > 0)
                    {
                        var respDM;
                        respDM = 'No se pudo guardar la Plantilla. Favor agregar las siguientes variables:';
                        respDM = respDM + '<br>';

                        _.each(respJson, function(i){
                            respDM = respDM + '<br>'+ i.Nombreatributo;
                        });

                        c_alert('Error', respDM, 'Cerrar');
                    }
                    else{
                        window.location='@Url.Action("ManPlantillas", "Mantenedor")';
                    }
                });

            };

            confirm(heading, question, cancelButtonTxt, okButtonTxt, callback);
            $('#grdaPlantilla').prop('disabled',false);
        });

        // Click on tab
        $(".nav-tabs")
            .on("click", "a", function (e) {
                e.preventDefault();
                if($(this).hasClass('crea-tab')) return;
                $(this).tab('show');

                var label = $(this).attr('href') + ' label';
                $(label).css({
                    'margin-left' : - $(label).width()/2,
                    'margin-top' : - $(label).height()/2
                });
            })
            .on("click", "span.glyp-close", function () {
                var id = $(this).parent().attr('href');
                var nume = $(id).find('li').length;
                if(nume > 0)
                {
                    var respDM = '  <p>\
                                        <span class="glyphicon glyphicon-warning-sign glyp-amarillo"></span>\
                                        Este tab contiene elementos que deben ser removidos antes de poder eliminarlo.\
                                    </p>\
                                    <p>\
                                        Actualmente hay <b id="msgnumelem">'+ nume +'</b> elementos.\
                                    </p>'
                    c_alert('Error', respDM, 'Cerrar');
                }
                else
                {
                    $(this).closest( "li" ).remove();
                    $(id).remove();
                    $(".nav-tabs li").children('a').first().click();
                }
            });

        // Click on Crea Nuevo Tab

        $(document).on('click','a.crea-tab', function(e) {
            e.preventDefault();
            totalTabs = totalTabs + 1;
            var id = ++tabCount;
            $(this).closest('li').before('<li><a href="#nuevoTab_' + id + '"><input type="hidden" class="cambia-nombre" value="Nuevo Tab"/><span class="nombre-tab cambia-tab" ordenTab="'+ totalTabs +'">Nuevo Tab&nbsp;&nbsp;</span><span class="glyphicon glyphicon-remove glyp-close"></span></a></li>');
