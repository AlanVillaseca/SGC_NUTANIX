@{
    ViewBag.Title = "nvaPlantillasElementosVerMod";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SistemaGestionCotizaciones.Models.ManPlantillas

@using System.Data
@using System.Web.Script.Serialization;
<script src="~/Scripts/underscore-min.js"></script>
<script src="~/Scripts/js/selectMenu.js"></script>
<link href="~/Content/css/modal.css" rel="stylesheet" />


<style>
    input[type=text]::-ms-clear {
        display: none;
    }

    .ui-icon {
        background-image: url('../../Content/prueba/images/ui-icons_222222_256x240.png');
    }

    #sortable1,
    #sortable2,
    #sortable3,
    .sortableN,
    #sortableCosto,
    #sortableImp {
        min-width: 250px;
        min-height: 100px;
        list-style-type: none;
        margin: 0;
        padding: 5px 0 0 0;
        float: left;
        margin-right: 10px;
    }

    #tabVariables,
    #tabCostos,
    #tabImplementacion {
        height: 500px;
        overflow: auto;
    }

    #sortable1 li,
    #sortable2 li,
    #sortable3 li,
    .sortableN li,
    #sortableCosto li,
    #sortableImp li {
        margin: 0 5px 5px 5px;
        padding: 5px;
        font-size: 1.2em;
        width: 230px;
        cursor: pointer;
    }

    .clsVariable {
        border-color: #0094ff !important;
    }

    .clsCosto {
        border-color: #63a81f !important;
    }

    .clsImp {
        border-color: #ff6a00 !important;
    }

    .cambia-nombre {
        border: none;
        z-index: 1;
    }

    .tabdrag {
        border-bottom: 1px solid;
