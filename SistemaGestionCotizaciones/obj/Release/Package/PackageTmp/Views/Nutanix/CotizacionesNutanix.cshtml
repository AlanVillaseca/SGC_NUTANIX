    function espereUnmomento() {
        let divCargando = $('#wait');
        divCargando.addClass("loader").show();

        function quitarDivCargando() {
            divCargando.removeClass("loader");

        }

        setInterval(quitarDivCargando, 2000);
    }
</script>




