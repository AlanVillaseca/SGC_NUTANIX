            var negSel = $( "#combo_negocios option:selected" ).prop('id');          

            $('#combo_serneg').append('<option id="" value="">Seleccione</option>');
            $('#combo_serneg').append('<option id="-1" value="-1">Todos</option>');
            _.each(serneg, function(i){
