@{
    ViewBag.Title = "Componente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SistemaGestionCotizaciones.Models.Componente
@using System.Data

<style>
    #frm_vriabl {
        position: absolute;
        top: 200px;
        left: 90px;
    }

    #loadingDiv {
        position: absolute;
        top: 500px;
        left: 30%;
        background: rgba(255,255,255,0.7);
    }

    .modCustom {
        right: 0;
        left: auto;
        overflow-x: hidden;
        overflow-y: hidden;
        text-align: center;
    }

    .modDialog {
        position: fixed;
        bottom: 0px;
        right: 0px;
        top: auto;
        left: auto;
    }

    #reemplazo {
        text-align: center;
    }

        #reemplazo input {
            margin: 0 auto;
        }

    .ui-icon {
        background-image: url('../../Content/prueba/images/ui-icons_222222_256x240.png');
    }

    .fila {
        display: inline-table;
        width: 180px;
        height: 60px;
    }

    .input-sm {
        *width: 150px;
    }

    textarea {
        width: 450px;
        height: 200px;
        resize: none;
        color: #555;
        vertical-align: middle;
        background-color: #FFF;
        border: 1px solid #CCC;
        border-radius: 4px;
    }

        textarea:focus {
            border-color: #66AFE9;
            outline: 0px none;
            box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.075) inset, 0px 0px 8px rgba(102, 175, 233, 0.6);
        }
</style>
<script>
    $(document).ready(function () {

        var idComponente = '@Model.idComponente';
        

        $("#hiddenCot").val(idComponente);

        $('#loadingDiv').hide();

        //$(document).ajaxStart(function () {

        //    $('#modal-cargando').modal('show');  // show Loading Div

        //}).ajaxStop(function () {

        //    $('#modal-cargando').modal('hide'); // hide loading div

        //});

        var url = '@Html.Raw(Url.Action("vpComponente", "Componente"))'
        url = url + '/' + idComponente + '?estado=' + @ViewBag.Estado;
        
        $('#dmc_newArbol').load(url);








    });
</script>

